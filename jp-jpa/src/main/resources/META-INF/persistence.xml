<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="jp-jpa" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>hu.codingmentor.hu.codingmentor.jpa.LoginInfo</class>
    <class>hu.codingmentor.hu.codingmentor.jpa.Customer</class>
    <class>hu.codingmentor.hu.codingmentor.jpa.Order</class>
    <class>hu.codingmentor.hu.codingmentor.jpa.Item</class>
    <class>hu.codingmentor.hu.codingmentor.jpa.Book</class>
    <class>hu.codingmentor.hu.codingmentor.jpa.CD</class>
    <class>hu.codingmentor.hu.codingmentor.jpa.Telephone</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/jp-jpa"/>
      <property name="javax.persistence.jdbc.user" value="jozsi"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="jozsi"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
